<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.customcourses.controllers.SaveScoresController" fx:id="saveScrollPane" fitToWidth="true" fitToHeight="true">
    <VBox fx:id="saveScoresPane">
        <HBox fx:id="fileHandlerPane" spacing="10" alignment="CENTER">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button text="Courses" fx:id="loadCoursesBtn" />
            <Button text="Legacy Courses" fx:id="loadLegacyBtn" />
        </HBox>

        <VBox spacing="15" alignment="TOP_CENTER">
            <HBox fx:id="courseSelectionBox" spacing="10" alignment="CENTER">
                <Label text="Course :" styleClass="scoreLabel"/>
                <ComboBox fx:id="courseCombo" promptText="Select course" prefWidth="200"/>
            </HBox>
            <HBox fx:id="difficultyRadioButtonsBox" spacing="10" alignment="CENTER"/>
            <VBox fx:id="mainContentBox" spacing="10" alignment="CENTER"/>
            <HBox fx:id="buttonsBox" spacing="15" alignment="CENTER"/>
        </VBox>
    </VBox>
</ScrollPane>